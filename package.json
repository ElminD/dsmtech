    "version": "1.0.0",
    "author": {
        "name": "Lee Robinson",
        "email": "lrobinson2011@gmail.com",
        "url": "https://dsmtech.io"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leerob/dsmtech.git"
    },
    "scripts": {
        "dev": "next",
        "build": "next build",
        "deploy": "now",
        "imageoptim": "imageoptim \"static/**/*.jpg\"",
        "start": "next start",
        "release": "now alias",
        "prettier": "prettier --write \"**/*.{js,json,md,yml}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,md,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.jpg": [
            "imageoptim",
            "git add"
        ]
    },
    "dependencies": {
        "next": "^7.0.2",
        "next-ga": "^2.3.4",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "styled-components": "^4.0.0"
    },
    "devDependencies": {
        "babel-plugin-styled-components": "^1.8.0",
        "husky": "^1.3.1",
        "imageoptim-cli": "^2.3.4",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3"
    }
}
